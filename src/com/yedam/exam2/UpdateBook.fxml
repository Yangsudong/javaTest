<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1">
	<padding>
		<Insets topRightBottomLeft="20" />
	</padding>
	<center>
		<GridPane BorderPane.alignment="CENTER" hgap="10" vgap="10">
			<Label text="도서명" prefWidth="50" GridPane.columnIndex="0"
				GridPane.rowIndex="0" />
			<Label text="저자" prefWidth="50" GridPane.columnIndex="0"
				GridPane.rowIndex="1" />
			<Label text="단가" prefWidth="50" GridPane.columnIndex="0"
				GridPane.rowIndex="2" />
			<Label text="판매량" prefWidth="50" GridPane.columnIndex="0"
				GridPane.rowIndex="3" />			
			<TextField id="bookName1" prefWidth="100"
				GridPane.columnIndex="1" GridPane.rowIndex="0" />
			<TextField id="bookWriter1" prefWidth="100"
				GridPane.columnIndex="1" GridPane.rowIndex="1" />
			<TextField id="bookPrice1" prefWidth="100"
				GridPane.columnIndex="1" GridPane.rowIndex="2" />
			<TextField id="bookSales1" prefWidth="100"
				GridPane.columnIndex="1" GridPane.rowIndex="3" />
		</GridPane>
	</center>
	<bottom>
		<HBox prefHeight="100.0" prefWidth="200.0"
			BorderPane.alignment="CENTER" spacing="20">
			<BorderPane.margin>
				<Insets topRightBottomLeft="10" />
			</BorderPane.margin>
			<children>
				<Button id="btnEdit" text="수정" />
				<Button id="btnEditCancel" text="닫기" />
			</children>
		</HBox>
	</bottom>
</BorderPane>

